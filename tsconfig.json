{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {    
    "outDir": "dist",
    "target": "es2016",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
